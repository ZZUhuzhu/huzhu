<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/UserProfile_top_holder"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@null"
        app:elevation="0dp">
        <ImageView
            android:id="@+id/UserProfile_top_background_image_view"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_background_2"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRiceWhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_resource_published_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:amount_visibility="false"
                    app:image_src="@drawable/publish_plane_blue"
                    app:item_text="@string/publishedByMe"/>
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_resource_received_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:amount_visibility="false"
                    app:item_text="@string/receivedByMe"
                    app:image_src="@drawable/receive_green"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/common_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_star_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:amount_visibility="false"
                    android:clickable="true"
                    android:focusable="true"
                    app:image_src="@drawable/star_yellow"
                    app:item_text="@string/myStar" />
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_track_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:amount_visibility="false"
                    android:clickable="true"
                    android:focusable="true"
                    app:item_text="@string/myTrack"
                    app:image_src="@drawable/track"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/common_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite">
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_comment_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:amount_visibility="false"
                    android:clickable="true"
                    android:focusable="true"
                    app:image_src="@drawable/comment_colorfule"
                    app:item_text="@string/myComment"/>
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_message_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:amount_visibility="false"
                    android:clickable="true"
                    android:focusable="true"
                    app:item_text="@string/myMessage"
                    app:image_src="@drawable/message_green"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/common_margin_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
                <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                    android:id="@+id/UserProfile_setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:amount_visibility="false"
                    app:image_src="@drawable/setting_black"
                    app:item_text="@string/setting"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@null"
            app:elevation="0dp">
            <android.support.v7.widget.Toolbar
                android:id="@+id/UserProfile_me_top_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="@color/colorWhite"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"/>
            <RelativeLayout
                android:id="@+id/UserProfile_me_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_large"
                android:layout_marginStart="@dimen/common_margin_large"
                android:layout_marginBottom="@dimen/common_margin_large"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/UserProfile_me_image_view"
                    android:contentDescription="@string/app_name"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp"
                    android:src="@drawable/profile_head_over_watch"/>
                <TextView
                    android:id="@+id/UserProfile_me_name_text_view"
                    android:layout_toEndOf="@id/UserProfile_me_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/common_text_size_large"
                    android:layout_marginStart="@dimen/common_margin_normal"
                    android:text="@string/solider"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>