<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zzu.huzhucommunity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".commonclass.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/register"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.UserProfileActivity"
            android:label="@string/userProfile"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.ResourceDetailActivity"
            android:label="@string/resourceDetail"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.PublishNewActivity"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.MessagesActivity"
            android:label="@string/message"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.ChatRoomActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.RequestDetailActivity"
            android:label="@string/requestDetail"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.SettingActivity"
            android:label="@string/setting"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.AccountProfileActivity"
            android:label="@string/accountProfile"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.SearchActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.SearchResultActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.OthersProfileActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.ProfileUpdateActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.PubRecStarTrackActivity"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".activities.MyCommentActivity"
            android:label="@string/myComment"
            android:theme="@style/TranslucentTheme" />
        <activity android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>